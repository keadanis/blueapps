<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_form_view" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_subtotal']"
                position="after">
                <button name="copy_sale_order_line" icon='fa-copy' type="object" />
            </xpath>
        </field>
    </record>
    <record id="purchase_form_view" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='price_subtotal']"
                position="after">
                <button name="copy_purchase_order_line" icon='fa-copy' type="object" />
            </xpath>
        </field>
    </record>
</odoo>
